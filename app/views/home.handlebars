
<div class="container text-left">
  <div class="row row-cols-3">
{{#each machines}}
    <div idx="machine_{{id}}" class="col machine machine_{{id}}">
        <h2
            data-bs-toggle="tooltip" data-bs-placement="top"
            data-bs-custom-class="custom-tooltip"
            data-bs-title="Serial: {{id}}
            IP Address: {{ip}}">{{name}}</h2>
        <iframe src="http://127.0.0.1:8888/{{id}}" scrolling="no" width="100%" height="300"></iframe>
        <div class="status">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated">0%</div>
            </div>
            <ul>
                <li class="task_name">None</li>
                <li><span class="remaining">n/a</span></li>
                <li>Printed layers: <span class="active_layer">0</span> of <span class="total_layer_num">0</span></li>
            </ul>
        </div>
    </div>
{{/each}}
  </div>
</div>
