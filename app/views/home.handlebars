
<div class="container text-left">
  <div class="row row-cols-3">
{{#each machines}}
    <div idx="machine_{{id}}" class="col machine machine_{{id}}">
        <h2
            data-bs-toggle="tooltip" data-bs-placement="bottom"
            data-bs-custom-class="custom-tooltip"
            data-bs-title="Serial: {{id}}
            IP Address: {{ip}}">{{name}}</h2>
        <iframe src="http://127.0.0.1:8888/{{id}}" scrolling="no" width="100%" height="300"></iframe>
        <div class="status">
            <div class="progress">
                <div class="progress-bar progress-bar-striped progress-bar-animated">0%</div>
            </div>
            <ul>
                <li class="task_name">None</li>
                <li><span class="remaining">n/a</span></li>
                <li>Printed layers: <span class="active_layer">0</span> of <span class="total_layer_num">0</span></li>
                <li><img src="/img/bambu/monitor_bed_temp.svg" title="Bed Temperature"> <span class="bed"></span>/<span class="bed_target"></span></li>
                <li><img src="/img/bambu/monitor_nozzle_temp.svg" title="Nozzle Temperature"> <span class="nozzle"></span>/<span class="nozzle_target"></span></li>
                <li><img src="/img/bambu/monitor_frame_temp.svg" title="Chamber Temperature"> <span class="chamber"></span></li>
            </ul>
        </div>
        <div class="ams">
            {{#each ../ams}}
            <div class="ams_{{@key}} visually-hidden">
                <div class="title">AMS {{this}} <span class="temp visually-hidden"></span> <span class="humidity visually-hidden"></span></div>
                <div class="container text-center">
                    <div class="row">
                    {{#each ../../trays}}
                    <div class="col tray tray_{{@key}}">
                        <span class="key">{{../this}}{{this}}</span>
                        <span class="name"></span><br>
                        <span class="color_box"><span class="color"></span></span>
                    </div>
                    {{/each}}
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
{{/each}}
  </div>
</div>
